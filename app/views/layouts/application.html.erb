<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.0.2/video.js"></script>
  <!-- // <script src="http://vjs.zencdn.net/ie8/1.1.1/videojs-ie8.min.js"></script> -->
</head>
<body>

	<div id="wrap">
		<nav class="navbar navbar-inverse" role="navigation">
		  <div class="container-fluid">
		    <!-- Brand and toggle get grouped for better mobile display -->
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <!-- <a class="navbar-brand" href="#">Flixter</a> -->
		      <%= link_to 'Flixter', root_path, :class => 'navbar-brand' %>
		    </div><!-- /.navbar-header -->

		    <!-- Collect the nav links, forms, and other content for toggling -->
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav">
		        <li>
		        	<%= link_to 'See All Courses', courses_path %>
		      </ul>
		     

		      <ul class="nav navbar-nav navbar-right">

		      	<!-- # Sign in  -->
		      	<% if user_signed_in? %>
		      		<li><%= link_to 'My Dashboard', dashboard_path %></li>
		      		<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>'
		      	<% else %>
		      		<li><%= link_to 'Sign in', new_user_session_path %></li>
		      		<li><%= link_to 'Sign up', new_user_registration_path %></li>
		      	<% end %>
		      	 <!-- end Sign in link -->

		      </ul>
		    </div><!-- /.navbar-collapse -->
		  </div><!-- /.container-fluid -->
		</nav>

		<!-- # Alert section -->
		<% if notice.present? %>
			<p class="alert alert-info"><%= notice %></p>
		<% end %>
		<% if alert.present? %>
			<p class="alert alert-danger"><%= alert %></p>
		<% end %>
		<!-- # end Alert section -->

		<%= yield %>
	</div>

	<br class="clr" />
	
	<div id="footer">
		<div class="container">
			      <div class="col-xs-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', '#' %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        ken@thefirehoseproject.com
        <br />
        One Kendall Square
        <br />
        Cambridge MA, 02113
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />

        <%= link_to 'http;//github.com/FirehoseWeekend' do %>
        	<%= image_tag 'github.png', :class => 'social-button' %>
        <% end %>

        <%= link_to 'https://www.facebook.com/theFirehoseProject' do %>
        	<%= image_tag 'facebook.png', :class => 'social-button' %>
        <% end %>

        <%= link_to 'https://twitter.com/firehoseproject' do %>
        	<%= image_tag 'twitter.png', :class => 'social-button' %>
        <% end %>

      </div>
		</div>
	</div>

</body>
</html>
